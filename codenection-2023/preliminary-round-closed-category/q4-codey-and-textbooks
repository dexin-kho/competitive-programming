#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

void solve(ll n, ll m, ll k) {
    ll total = n * (m + n * m) / 2;
    ll borrow = total - k;
    
    if (borrow > 0) cout << borrow << endl;
    else cout << "0\n";
}

int main() {
    ll n, m, k;
    cin >> n >> m >> k;
    
    solve(n, m, k);
}
